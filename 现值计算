#include<iostream>
#include<algorithm>
#include<cmath>
#include<vector>
#include<map>
#include<queue>
#include<string>
#include<set>
using namespace std;
int n,sum;
double i,sum1=0,ans=0;
int main(){
    cin>>n;
    scanf("%lf", &i);
    
   
    for(int j=1;j<=n+1;j++){
        double t1;
        scanf("%lf", &t1);
        if(j!=1)
        for(int q=0;q<j-1;q++)
        t1/=(1.000+i);
        sum1+=t1;

    }
   ans=sum+sum1;
   printf("%f",ans);

    

}
